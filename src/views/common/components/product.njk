{% macro product(title, price, priceAfterDiscount, imageUrl,slug) %}
    <a class="card" href="product/{{slug}}">
        <img src="{{imageUrl}}"/>
        <div>
            <h5>{{title}}</h5>
            <span>{{price}}</span>
            <span>{{priceAfterDiscount}}</span>
        </div>
    </a>
{% endmacro %}

{# swiper aboutProduct #}
{% macro aboutProduct(text)%}
       <li class="mt-1">{{text}}</li>
{% endmacro %}


{# swiper productPrice #}
{%macro productPrice(text,price="شحن مجاني")%}
        <div class="flex justify-between mt-3">
            <div class=" text-gray">{{text}}</div>
            <div class=" font-bold">{{price}}</div>
        </div>
{% endmacro %}

{# swiper mecro #}
{% macro swiperContent(img)%}
  <div class="swiper-slide">
    <img src="{{img}}" alt="" srcset="">
  </div>
{%endmacro%}


